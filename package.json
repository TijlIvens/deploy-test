{
  "name": "deploy-test",
  "version": "3.1.0",
  "author": "Tijl",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/babel**",
      "**/eslint**",
      "**/jest",
      "**/react-scripts",
      "**/react-scripts/**"
    ]
  },
  "scripts": {
    "version:patch": "yarn version --patch --no-git-tag-version && ./version.sh",
    "version:minor": "yarn version --minor --no-git-tag-version && ./version.sh",
    "version:major": "yarn version --major --no-git-tag-version && ./version.sh"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "fs-extra": "5.0.0",
    "prettier": "^2.2.1",
    "release": "^6.3.0"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "lint-staged": {
    "**/*.+(js|ts|tsx)": [
      "eslint"
    ],
    "**/*.+(js|json|ts|tsx)": [
      "prettier --write"
    ]
  }
}
